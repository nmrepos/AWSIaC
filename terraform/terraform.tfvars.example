# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values
# DO NOT commit terraform.tfvars to version control if it contains sensitive data

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"
owner       = "student-name"  # Replace with your name

# S3 Configuration
s3_bucket_names = [
  "your-unique-terraform-bucket-1",  # Replace with unique names
  "your-unique-terraform-bucket-2",
  "your-unique-terraform-bucket-3", 
  "your-unique-terraform-bucket-4"
]
enable_s3_versioning = true

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]
availability_zones   = ["us-east-1a", "us-east-1b"]

# EC2 Configuration
instance_type     = "t2.micro"
ami_id           = "ami-0c02fb55956c7d316"  # Amazon Linux 2 in us-east-1
key_pair_name    = "your-key-pair-name"     # Replace with your key pair name
enable_public_ip = true

# RDS Configuration
db_instance_class      = "db.t3.micro"
db_engine             = "mysql"
db_engine_version     = "8.0"
db_name               = "prog8870db"
db_username           = "admin"
db_password           = "YourSecurePassword123!"  # Use a strong password
db_allocated_storage  = 20
db_publicly_accessible = true  # For this project only

# Security Configuration (Restrict these in production)
allowed_ssh_cidrs = ["0.0.0.0/0"]  # Replace with your IP for better security
allowed_db_cidrs  = ["0.0.0.0/0"]  # Replace with specific CIDRs for better security
